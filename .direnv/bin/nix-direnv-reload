#!/usr/bin/env bash
set -e
if [[ ! -d "/home/Igor/Programiranje/C/grafika-domaci_1" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/Igor/Programiranje/C/grafika-domaci_1")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/Igor/Programiranje/C/grafika-domaci_1" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/Igor/Programiranje/C/grafika-domaci_1/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/Igor/Programiranje/C/grafika-domaci_1/.envrc" "/home/Igor/Programiranje/C/grafika-domaci_1/.direnv"/*.rc
